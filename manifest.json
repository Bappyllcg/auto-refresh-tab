{
  "manifest_version": 3,
  "name": "Auto Tab Refresher",
  "version": "1.0",
  "description": "Automatically refreshes tabs at random intervals between specified minimum and maximum times",
  "permissions": ["tabs", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}